<% next_page = @pagy.next %>
<%= turbo_frame_tag 'page_handler' do %>
  <%= turbo_stream_action_tag('append', target: 'notifications',
    template: %(#{render partial: 'user/notifications/notification', collection: @notifications, locals: { small_view: false }})) %>
  <%= turbo_stream_action_tag('replace', target: 'load_more', 
    template: %(#{render 'shared/load_more', next_page: next_page, page_path: user_notifications_path(page: next_page)})) %>
<% end %>

