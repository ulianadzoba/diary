<% next_page = @pagy.next %>
<%= turbo_frame_tag 'page_handler' do %>
  <%= turbo_stream_action_tag('append', target: 'posts',
    template: %(#{render partial: 'posts/post', collection: @posts })) %>
  <%= turbo_stream_action_tag('replace', target: 'load_more', 
    template: %(#{render 'shared/load_more', next_page: next_page, page_path: journal_path(@journal, page: next_page)})) %>
<% end %>

