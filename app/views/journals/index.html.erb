<div class='responsive-container mt-10'>
  <%= turbo_frame_tag 'page_handler' %>
  <div class='mb-10 flex justify-between'>
    <%= render partial: 'search/categories', locals: { form_url: search_journals_path }%>
    <%= render partial: 'search/input_form', locals: { results: [], form_url: search_journals_path, suggestions_url: search_suggestions_journals_path }%>
  </div>
  <% if @journals.present? %>
    <div id='journals' class='grid grid-cols-6 gap-10'>
      <%= render partial: 'journals/journal', collection: @journals, locals: { public: true } %>
    </div>
    <% next_page = @pagy.next %>
    <%= render 'shared/load_more', next_page: next_page, page_path: journals_path(page: next_page)  %>
  <% else %>
    <div class='mt-8 content-base'>No journals</div>
  <% end %>
</div>
