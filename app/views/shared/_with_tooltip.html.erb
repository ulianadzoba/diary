<div data-controller='popper'>
  <button data-popper-target='element' data-action='mouseenter->popper#show mouseleave->popper#hide'>
    <%= yield %>
    <div id='tooltip' role='tooltip' data-popper-target='tooltip'>
      <%= tooltip_text %>
      <div id='arrow' data-popper-arrow></div>
    </div>
  </button>
</div>
